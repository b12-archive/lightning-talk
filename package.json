  "contributors": [
    "Tomek Wiszniewski <t.wiszniewski@gmail.com> (https://github.com/tomekwi)"
  ],
  "repository": {
    "type": "git",
    "url": "git@github.com:studio-b12/lightning-talk"
  },
  "license": "MIT",
  "devDependencies": {
    "budo": "^8.1.0",
    "document-register-element": "^0.5.4",
    "eslint": "^2.6.0",
    "eslint-config-airbnb": "^6.2.0",
    "marked-man": "^0.1.5"
  },
  "dependencies": {
    "@parametric-svg/element": "^1.2.4",
    "ecstatic": "^1.4.0",
    "hasbin": "^1.2.1",
    "minimist": "^1.2.0",
    "mousetrap": "^1.5.3",
    "open": "0.0.5"
  }
}
